{
  "extends": ["stylelint-config-standard", "stylelint-scss", "stylelint-order"],
  "rules": {
    "selector-class-pattern": [
      "^[a-z]+(-[a-z]+)*$",
      {
        "message": "Expected class to be defined as kebab-case"
      }
    ],
    "selector-id-pattern": [
      "^[a-z]+(-[a-z]+)*$",
      {
        "message": "Expected id to be defined as kebab-case"
      }
    ],
    "at-rule-no-unknown": null,
    "no-invalid-position-at-import-rule": null,
    "media-query-no-invalid": null
  }
}
